# Habit Rabbit - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Firebase Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Firebase Project ID (found in Firebase Console)
FIREBASE_PROJECT_ID=your_firebase_project_id

# Firebase API Key for web (found in Firebase Console > Settings)
FIREBASE_API_KEY=your_firebase_api_key

# Firebase App ID (found in Firebase Console > Project Settings)
FIREBASE_APP_ID=your_firebase_app_id

# Firebase Auth Domain
FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com

# Firebase Database URL (for Realtime Database)
FIREBASE_DATABASE_URL=https://your_project_id.firebaseio.com

# Firebase Storage Bucket
FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# App Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Environment (development, staging, production)
ENVIRONMENT=development

# Enable debug logging
DEBUG=true

# API Base URL (if applicable for backend services)
API_BASE_URL=https://api.habitrabbit.app

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# App-Specific Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Enable notifications
ENABLE_NOTIFICATIONS=true

# Default notification time (HH:MM format)
NOTIFICATION_TIME=09:00

# Enable analytics
ENABLE_ANALYTICS=true

